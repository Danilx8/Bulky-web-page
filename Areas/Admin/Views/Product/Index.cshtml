@model List<Product>

<div class="container mt-5">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Products list
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Create new product
            </a>
        </div>
    </div>
    <div class="row">
        @foreach(var obj in Model) {
            <div class="col-md-3 col-sm-4 col-6 product-card mb-4">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-header">@obj.Title</h4>
                        <div class="card-subtitle my-2 ms-2 text-muted">@obj.Author | @obj.Category.Name</div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item text-center">&lt;50: $@obj.Price</li>
                            <li class="list-group-item text-center">50-100: $@obj.Price50</li>
                            <li class="list-group-item text-center">&gt;100: $@obj.Price100</li>
                        </ul>
                            <div class="btn-group mt-3 col-md-2" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary">
                                    Edit <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
                                    Delete <i class="bi bi-trash3-fill"></i>
                                </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>